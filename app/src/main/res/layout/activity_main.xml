<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/alertDialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_1" />

    <Button
        android:id="@+id/alertDialog3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_3" />

   <Button
        android:id="@+id/alertDialogList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_list" />

   <Button
        android:id="@+id/alertDialogListSingle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_list_single" />

   <Button
        android:id="@+id/alertDialogListMulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_list_multi" />

    <Button
        android:id="@+id/alertDialogCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_custom_form" />

    <Button
        android:id="@+id/fragmentDialogBuilder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_builder" />

    <Button
        android:id="@+id/fragmentCustomBuilder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_custom" />

    <Button
        android:id="@+id/fragmentBottomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bottom" />

</LinearLayout>